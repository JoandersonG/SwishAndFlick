<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="165dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardElevation="6dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="166dp"
        android:layout_height="240dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivProduto"
            android:layout_width="166dp"
            android:layout_height="166dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/caldeirao_um" />

        <TextView
            android:id="@+id/tvTituloProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="TÃ­tulo"
            android:textColor="@color/colorAccent"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/buttonComprarProd"
            app:layout_constraintTop_toBottomOf="@+id/ivProduto"
            tools:layout_editor_absoluteX="0dp" />


        <Button
            android:id="@+id/buttonComprarProd"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="casual"
            android:text="adicionar ao carrinho"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>